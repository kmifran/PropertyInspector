            <!--android:id="@+id/textView_notes"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Property Notes, observations, dot points, ideas, thoughts..."-->
            <!--android:textColor="@android:color/black" />-->
        </LinearLayout>

    </LinearLayout>

</ScrollView>

